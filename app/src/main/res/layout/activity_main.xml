<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lyTrackCtrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:minWidth="100dp"
        android:gravity="center"
        android:background="@mipmap/bg_track_ctrl"
        >
        <ImageView
            android:id="@+id/btnStartTrack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_track_ctrl_start"
            android:visibility="gone"
            android:layout_margin="6dp"
            />
        <ImageView
            android:id="@+id/btnStopTrack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_track_ctrl_stop"
            android:layout_margin="6dp"
            />
        <ImageView
            android:id="@+id/btnPauseTrack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_track_ctrl_pause"
            android:layout_margin="6dp"
            />
    </LinearLayout>

</RelativeLayout>
